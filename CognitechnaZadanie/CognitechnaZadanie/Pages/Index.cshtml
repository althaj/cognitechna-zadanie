@page
<div class="container">
    <div class="row p-1">
        <div class="col-1">Task title</div>
        <div class="col-5"><input type="text" id="titleInput" required /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Task description</div>
        <div class="col-5"><input type="text" class="w-100" id="descriptionInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="submitTask" value="Submit task" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="taskList"></ul>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/tasks.js"></script>